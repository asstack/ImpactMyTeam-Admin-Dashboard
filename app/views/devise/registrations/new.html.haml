.registration
  .already-section.inner-container
    %p.pull-left Already have an account?
    = link_to 'Login', new_user_session_path, class: 'black-button small-button pull-right'
  .registration-form.inner-container
    %h1 Ready to make an impact?
    %p.h6 Create your account
    = simple_form_for(resource, :as => resource_name,
                                :url => registration_path(resource_name),
                                :html => {:class => 'form-vertical' }) do |f|

      = f.error_notification
      = display_base_errors resource

      = f.input :first_name, autofocus: true, required: true, label: false
      = f.input :last_name, required: true, label: false
      = f.input :email, required: true, label: false
      = f.input :phone_number, required: true, label: false
      = f.input :password, required: true, label: false
      = f.input :password_confirmation, required: true, label: false

      = f.button :submit, 'Register', class: 'red-button large-button pull-right'
