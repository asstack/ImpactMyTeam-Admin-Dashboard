.registration.edit-registration
  .registration-form.inner-container
    %h1 Edit #{resource_name.to_s.humanize}
    = simple_form_for(resource, :as => resource_name,
                                :url => registration_path(resource_name),
                                :html => { :method => :put, :class => 'form-vertical' }) do |f|

      = f.error_notification
      = display_base_errors resource

      = f.input :first_name, autofocus: true,  label: false
      = f.input :last_name, label: false
      = f.input :email, required: true, label: false
      = f.input :phone_number, label: false
      = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false
      = f.input :password_confirmation, required: false, label: false

      = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false

      = f.button :submit, 'Update', class: 'pull-right red-button large-button'

  .form-actions
    = link_to "Cancel", :back, class: 'pull-left red-button'
    = link_to "Deactivate account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'pull-right black-button'
