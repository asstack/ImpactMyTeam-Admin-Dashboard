$('ul.cart_items #edit_cart_item_<%= @cart_item.id %>').html('<%= escape_javascript(render :partial => "cart_items/form", :locals => { :shopping_cart => @shopping_cart, :item => @cart_item })%>');
$('#<%= dom_id(@cart_item, :select)%> .thumbnail').html('<%= image_tag @cart_item.image.small %>');
$('.product-selection-header span#item_count').html('<%= @shopping_cart.items.sum(&:quantity) %>');
$('#cart_subtotal').html('<%= number_to_currency(@shopping_cart.order_total) %>')
